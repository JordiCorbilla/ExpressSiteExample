*
  margin 0
  padding 0
  box-sizing border-box

body
  font-family 'Open Sans', sans-serif
  background-color #45BFD7

.header
  background-position center

  .page-title
    font-weight 200
    font-size 60px
    padding 30px
    text-align center
    color #fff

.nav
  background rgba(45, 47, 56, 1)
  text-align center

  li
    display inline-block

  a
    display inline-block
    padding 20px
    color #fff
    text-decoration none

    &:hover
      background-color #45BFD7

.ONLINE 
    color green

.CONTACTING
    color #FF8C00

.PENDING
    color #FF8C00

.timeout
  color red

.main-content
  margin 50px auto
  max-width 600px

  p
    line-height 1.6
    margin-bottom 1.7em

.footer
  margin 50px auto
  max-width 600px
  border-top 1px solid #444
  padding 20px 0

  p
    color #444
    font-size 12px

